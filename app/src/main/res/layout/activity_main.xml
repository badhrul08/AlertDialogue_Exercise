<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/showDialogueStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show dialogue standard"
        android:backgroundTint="@color/purple_500"
        android:layout_marginBottom="200dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showDialogueAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show dialogue with action"
        android:backgroundTint="@color/purple_500"
        android:layout_marginBottom="320dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showDialogueStandard"/>

    <Button
        android:id="@+id/showDialogueCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show dialogue custom"
        android:backgroundTint="@color/purple_500"
        android:layout_marginBottom="243dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showDialogueAction"/>

    <Button
        android:id="@+id/showDialogueFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show dialogue custom"
        android:backgroundTint="@color/purple_500"
        android:layout_marginBottom="160dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showDialogueCustom"/>


</androidx.constraintlayout.widget.ConstraintLayout>